<h1><%= @restaurant.name.upcase %></h1>

<h2><%= @restaurant.address %></h2>
<h3>Cat√©gorie : <%= @restaurant.category.capitalize %></h3>

<ul>
  <% @restaurant.reviews.each do |review| %>
  <li><%= review.content %> - <%= review.rating %>/5</li>
  <% end %>
</ul>

<div class="form">
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating %>
    <%= f.submit %>
  <% end %>
</div>

<div class="btn_brown"><%= link_to "Add a review", new_restaurant_review_path(@restaurant) %></div>
<div class="btn_brown"><%= link_to "Restaurant's list", restaurants_path %></div>
